<!DOCTYPE html>
<html>
  <head>
    <title>DaBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<%= render 'layouts/navbar' %>

  	<div class="container">
      <div>
        <% if user_signed_in? %>
          <p>Welcome <%= current_user.username %>!</p>
        <% end %>
      </div>


    	<%= yield %>
    </div>
  </body>
</html>
